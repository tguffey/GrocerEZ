<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GrocerEZ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- I changed the primary colors- Jocelyn -->
        <item name="colorPrimary">@color/green002</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Color of system icons in the status bar (time, battery, etc.). -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Text color for the ActionBar or Toolbar title. -->
    </style>
<!--    This is for the settings page-->
    <style name="nightModeSwitch" parent= "Theme.AppCompat.Light">
    <item name="colorControlActivated">@color/green002</item>
    <item name="colorSwitchThumbNormal">#FFFFFF</item>
    <item name="android:colorForeground">#333333</item>
</style>

</resources>