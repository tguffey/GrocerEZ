<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Title of the sheet-->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Recipe"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <!-- ALL TEXT INPUT FIELDS FOR ADDING A NEW ITEM-->
        <!--Field for the name of the item-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemName">

            <!--Label the text input as the name-->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Name"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Field for the description of the item-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemDescription">

            <!--Label the text input as the description-->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:hint="Description"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredientRecyclerView"
            />

<!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="80dp"-->
<!--            android:orientation="horizontal">-->

<!--            &lt;!&ndash;Field for the ingredients of the item&ndash;&gt;-->
<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/itemCategory"-->
<!--                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"-->
<!--                android:layout_width="262dp"-->
<!--                android:layout_height="match_parent">-->

<!--                &lt;!&ndash;Label the text input as the ingredients&ndash;&gt;-->
<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/ingredientName"-->
<!--                    android:layout_width="227dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:hint="Ingredient" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <!-- Cancel button on the left -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addIngredientButton"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="add ingredient"
            app:icon="@drawable/ic_add_24" />
<!--        </LinearLayout>-->

        <!--Field for any notes of the item-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemNote">

            <!--Labels the text input as notes-->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notes"
                android:hint="Notes"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cancel and Save buttons side-by-side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Cancel button on the left -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Cancel"
                />

            <!-- Save button on the right -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Save"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
