<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipes.RecipesFragment">

    <View
        android:id="@+id/transparentBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Title"
        android:gravity="center"
        android:id="@+id/buttonLayout"
        >

        <!--Edit Item option 1: Clear List button-->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/clear_list_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:contentDescription="Parse Recipe"
            android:text="Parse Recipe"
            android:textColor="?colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary"
            app:icon="@drawable/baseline_search_24"
            app:iconTint="@color/white"
            />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <!--Edit Item option 2: Add Item button-->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/add_item_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:contentDescription="@string/button_add_item"
            android:text="Add Recipe"
            android:textColor="?colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary"
            app:icon="@drawable/ic_add_24"
            app:iconTint="@color/white"
            android:layout_marginEnd="20dp"

            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@+id/buttonLayout"> <!-- Adjust corner radius if needed -->

    <android.widget.SearchView
        android:id="@+id/recipeSearchBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:queryHint="Search Recipe..."
        android:iconifiedByDefault="false"/>

</androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"
        android:id="@+id/recipeListRecyclerView"
        android:backgroundTint="@color/design_default_color_background"
        />

</RelativeLayout>